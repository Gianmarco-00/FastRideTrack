<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.ispw.fastridetrack.controller.guicontroller.DriverPendingRideConfirmationGUI">

    <children>

        <ImageView fitHeight="720.0" fitWidth="1280.0">
            <image>
                <Image url="@../images/DriverPendingRequest.jpg" />
            </image>
        </ImageView>

        <TextField fx:id="destinationField" alignment="CENTER" editable="false"
                   layoutX="692.0" layoutY="364.0" prefHeight="30.0" prefWidth="228.0"
                   style="-fx-background-color: transparent;">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>

        <TextField fx:id="estimatedFareField" alignment="CENTER" editable="false"
                   layoutX="718.0" layoutY="412.0" prefHeight="26.0" prefWidth="185.0"
                   style="-fx-background-color: transparent;">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>

        <TextField fx:id="clientNameField" alignment="CENTER" editable="false"
                   layoutX="694.0" layoutY="185.0" prefHeight="42.0" prefWidth="234.0"
                   style="-fx-background-color: transparent;">
            <font>
                <Font size="18.0" />
            </font>
        </TextField>

        <TextField fx:id="estimatedTimeField" alignment="CENTER" editable="false"
                   layoutX="718.0" layoutY="456.0" prefHeight="26.0" prefWidth="185.0"
                   style="-fx-background-color: transparent;">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>

        <TextField fx:id="paymentInfoField" alignment="CENTER" editable="false"
                   layoutX="718.0" layoutY="499.0" prefHeight="26.0" prefWidth="185.0"
                   style="-fx-background-color: transparent;">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>

        <Button fx:id="PendingRequestsButton" layoutX="88.0" layoutY="478.0"
                mnemonicParsing="false" prefHeight="42.0" prefWidth="266.0"
                style="-fx-background-color: transparent;" />

        <Button fx:id="currentRideButton" layoutX="88.0" layoutY="435.0"
                mnemonicParsing="false" prefHeight="42.0" prefWidth="266.0"
                style="-fx-background-color: transparent;" />

        <Button layoutX="88.0" layoutY="524.0" mnemonicParsing="false"
                prefHeight="42.0" prefWidth="266.0" style="-fx-background-color: transparent;" />

        <Button layoutX="87.0" layoutY="566.0" mnemonicParsing="false"
                prefHeight="42.0" prefWidth="266.0" style="-fx-background-color: transparent;" />

        <Button fx:id="myAccountButton" layoutX="88.0" layoutY="391.0"
                mnemonicParsing="false" prefHeight="42.0" prefWidth="266.0"
                style="-fx-background-color: transparent;" />

        <Button fx:id="homeButton" layoutX="88.0" layoutY="348.0"
                onAction="#onDriverHome" mnemonicParsing="false"
                prefHeight="42.0" prefWidth="266.0" style="-fx-background-color: transparent;" />

        <Button fx:id="LogoutButton" layoutX="88.0" layoutY="607.0"
                mnemonicParsing="false" prefHeight="42.0" prefWidth="266.0"
                style="-fx-background-color: transparent;" />

        <Button fx:id="destinationButton" layoutX="964.0" layoutY="364.0"
                mnemonicParsing="false" prefHeight="30.0" prefWidth="228.0"
                style="-fx-background-color: #29bbbb;" text="View destination on map" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

        <Button fx:id="clientPositionButton" layoutX="689.0" layoutY="278.0"
                mnemonicParsing="false" prefHeight="30.0" prefWidth="234.0"
                style="-fx-background-color: #29bbbb;" text="View client position" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

        <TextField fx:id="driverUsernameField" alignment="CENTER" editable="false"
                   layoutX="97.0" layoutY="278.0" prefHeight="26.0" prefWidth="185.0"
                   style="-fx-background-color: transparent;">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>

        <Label fx:id="confirmationLabel" alignment="CENTER" contentDisplay="CENTER"
               layoutX="732.0" layoutY="566.0" prefHeight="42.0" prefWidth="158.0"
               text="Ride accepted !" visible="false">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <HBox fx:id="buttonBox" alignment="CENTER" layoutX="526.0" layoutY="537.0"
              prefHeight="100.0" prefWidth="570.0" spacing="30.0">
            <children>
                <Button fx:id="AcceptButton" mnemonicParsing="false" onAction="#onAccept"
                        prefHeight="30.0" prefWidth="249.0" style="-fx-background-color: #29bbbb;"
                        text="Accept ride" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="RejectButton" mnemonicParsing="false" onAction="#onReject"
                        prefHeight="30.0" prefWidth="266.0" style="-fx-background-color: #29bbbb;"
                        text="Reject ride" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>

        <VBox fx:id="rejectBox" alignment="CENTER" layoutX="660.0" layoutY="520.0"
              prefHeight="122.0" prefWidth="292.0" spacing="10.0" visible="false">
            <children>
                <Label fx:id="rideRejectedLabel" alignment="CENTER" contentDisplay="CENTER"
                       prefHeight="42.0" prefWidth="158.0" text="Ride rejected">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Button fx:id="refreshButton" alignment="CENTER" mnemonicParsing="false"
                        onAction="#onRefresh" prefHeight="30.0" prefWidth="249.0"
                        style="-fx-background-color: #29bbbb;" text="View other request" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </VBox>

    </children>
</AnchorPane>
