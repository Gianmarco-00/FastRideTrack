<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" fx:controller="org.ispw.fastridetrack.controller.guicontroller.SignUpGUIController"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="720.0" prefWidth="1280.0">
   <children>
      <ImageView fitHeight="720.0" fitWidth="1280.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0">
         <image>
            <Image url="@../images/SignUp.jpg"/>
         </image>
      </ImageView>

      <Button fx:id="homepageButton" layoutX="82.0" layoutY="134.0" mnemonicParsing="false"
              prefHeight="25.0" prefWidth="131.0" style="-fx-background-color: transparent;"
              onAction="#onHomepage"/>

      <TextField fx:id="firstNameField" layoutX="335.0" layoutY="307.0" prefHeight="25.0"
                 prefWidth="257.0" style="-fx-background-color: transparent;" promptText="Name"/>

      <TextField fx:id="lastNameField" layoutX="335.0" layoutY="354.0" prefHeight="25.0"
                 prefWidth="257.0" style="-fx-background-color: transparent;" promptText="Surname"/>

      <TextField fx:id="usernameField" layoutX="693.0" layoutY="307.0" prefHeight="25.0"
                 prefWidth="257.0" style="-fx-background-color: transparent;" promptText="Username"/>

      <TextField fx:id="passwordField" layoutX="693.0" layoutY="354.0" prefHeight="25.0"
                 prefWidth="257.0" style="-fx-background-color: transparent;" promptText="Password"/>

      <TextField fx:id="emailField" layoutX="693.0" layoutY="400.0" prefHeight="25.0"
                 prefWidth="257.0" style="-fx-background-color: transparent;" promptText="Email"/>

      <TextField fx:id="phoneNumberField" layoutX="571.0" layoutY="450.0" prefHeight="25.0"
                 prefWidth="205.0" style="-fx-background-color: transparent;" promptText="Phone Number"/>

      <ChoiceBox fx:id="userTypeChoiceBox" layoutX="335.0" layoutY="400.0" prefHeight="25.0"
                 prefWidth="257.0" style="-fx-background-color: transparent;"/>

      <Button fx:id="signUpButton" layoutX="519.0" layoutY="524.0" mnemonicParsing="false"
              prefHeight="25.0" prefWidth="257.0" style="-fx-background-color: transparent;"
              onAction="#onSignUp"/>
   </children>
</AnchorPane>

